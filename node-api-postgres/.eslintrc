{
  "extends": "airbnb-base",
  "rules": {
    "class-methods-use-this": 0,
    "no-shadow": [2, { "allow": ["err"] }],
    "no-underscore-dangle": [0],
    "prefer-rest-params": 0,
    "strict": [2, "global"],
    "id-length": [2, {
      "min": 2,
      "exceptions": ["_", "m", "q"]
    }],
    "space-before-function-paren": 0,
    "max-len": [2, { "code": 120 }]
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "node": true,
    "es6": true
  }
}
